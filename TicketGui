	private static void addPopup(Component component, final JPopupMenu popup) {
		component.addMouseListener(new MouseAdapter() {
			public void mousePressed(MouseEvent e) {
				if (e.isPopupTrigger()) {
					showMenu(e);
				}
			}
			public void mouseReleased(MouseEvent e) {
				if (e.isPopupTrigger()) {
					showMenu(e);
				}
			}
			private void showMenu(MouseEvent e) {
				popup.show(e.getComponent(), e.getX(), e.getY());
			}
		});
	}
	
	private void sellAll() {
		
		int tickets = 100;
		int ticketPrice = 65;
		int cheap = 65;
		int expensive = 100;
		String concertDate = "Day One";
		Person aPerson = new Person();
		people = new Person[tickets + 1];
		people [0] = aPerson;
		
		for(int i = 1; i <= tickets; ++i){
			Person p1 = new Person();
			String name = "Tyler" + i;
			p1.setName(name);
			p1.setEmail(name + "@Fightclub.com");
			p1.setCreditCard(1000_0000_0000_0000L + i);
			people[i] = p1;
			if(i>60000 && i<=80000){
				ticketPrice = expensive;
			}
			if(i>80000 && i <= 159999){
				concertDate = "Day Two";
				ticketPrice = cheap;
				if(i > 140000){
					ticketPrice = expensive;
				}
			}
			else if(i>160000 && i <= 239999){
				concertDate = "Day Three";
				ticketPrice = cheap;
				if(i>220000){
					ticketPrice = expensive;
				}
			}
			else if(i>240000 && i<= 319999){
				concertDate = "Day Four";
				ticketPrice = cheap;
				if(i>300000){
					ticketPrice = expensive;
				}
			}
				
			else if(i>320000){
				concertDate = "Day Five";
				ticketPrice = cheap;
				if(i>380000){
					ticketPrice = expensive;
				}
			}
			System.out.println(p1.getName() + " " + p1.getEmail() + " " + p1.getCreditCard() + " â‚¬" + ticketPrice
					+ " " + concertDate);
		}
		
	}
	
